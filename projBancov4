		//escreva("Valor movimento: R$ ")
		//leia(movimento)
		//se (auxMovi =='D'){
		//			saldo = saldo + movimento
		//		}senao se (auxMovi == 'C'){
		//			saldo = saldo - movimento
		//		}

		
		//escreva("Continuar S/N: ")
		//leia(continuar)
		//se (continuar == 'S'){
		//	ativo = verdadeiro	
		//}senao se (continuar =='N'){
		//	ativo = falso
			
